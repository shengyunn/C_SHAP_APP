        <StackPanel x:Name="stackpenal_DrinkMenu" Margin="70,10,0,0" Width="518" Background="#FFE2D1BD" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="OrderButton" Content="確定訂購" HorizontalAlignment="Left" Margin="642,64,0,0" VerticalAlignment="Top" Height="51" Width="114" Click="OrderButton_Click"/>
        <TextBlock x:Name="textblock1" HorizontalAlignment="Left" Height="150" Margin="70,275,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="518" FontSize="18">
